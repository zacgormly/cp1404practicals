BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            text: app.input
            font_size: 45
            size_hint_x: 0.8
            on_text: app.handle_calculation(self.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                on_press: app.handle_increment(user_input.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(user_input.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculation(user_input.text)
    Label:
        text: app.output
        color: (0.917, 0.937, 0.172, 1)
